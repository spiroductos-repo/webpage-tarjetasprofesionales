---
import * as about from "../pages/about/about.md";
---

<header class="mx-auto pb-2 relative">
    <article
        class="flex flex-col md:flex-col items-center gap-0 w-full max-w-2xl"
    >
        <div class="overflow-hidden max-h-2/5">
            <img
                alt="profile picture"
                src={import.meta.env.BASE_URL + "/raffaella.webp"}
            />
        </div>

        <div class="bg-[#124E91] h-[20px] m-0 p-0 w-full"></div>
        <div class="overflow-hidden w-[350px] my-[10px]">
            <img
                alt="profile picture"
                src={import.meta.env.BASE_URL + "/h512_spiroductos.png"}
            />
        </div>

        <div class="w-full flex flex-row px-5">
            <div class="basis-2/3">
                <div class="flex justify-left items-center relative">
                    <h1
                        class="text-3xl font-extrabold tracking-tight md:text-3xl relative"
                    >
                        {about.frontmatter.name}
                    </h1>
                </div>
                <h2 class="text-lg text-secondary">
                    {about.frontmatter.designation}
                </h2>

                <h3 class="text-lg font-light italic">Spiroductos S.A.S</h3>
            </div>
            <div class="basis-1/3 flex justify-end">
                <img
                    alt="profile picture"
                    class="h-[100px]"
                    src={import.meta.env.BASE_URL + "/qr-code.svg"}
                />
            </div>
        </div>
    </article>
</header>

<style>
    @media (max-width: 768px) {
        .flex-col.justify-end {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    }
</style>
