---
import "@fontsource-variable/dm-sans";
import Footer from "../components/Footer.astro";
import { Icon } from "astro-icon/components";
import { ViewTransitions } from "astro:transitions";
const { name } = Astro.props;
---

<!doctype html>
<html lang="gl">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/png" href="/favicon.webp" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <title>{name} - Spiroductos</title>
        <ViewTransitions />
    </head>
    <body class="flex flex-col justify-center items-center">
        <div
            class="max-w-[440px] my-[20px] bg-white border border-[#E2E8F0] rounded-[16px] shadow-2xl shadow-[#999]"
        >
            <slot name="header" />
            <main>
                <slot name="links" />
            </main>
        </div>

        <button
            class="action-button sticky bottom-5 animate-bounce text-lg flex flex-row gap-2"
        >
            <Icon name="mdi:contact-outline" class="w-8 h-8" />
            Guardar contacto
        </button>

        <Footer class="flex justify-center items-center py-4" />
        <style is:global>
            .action-button {
                @apply bg-[#124E91] font-bold p-3 rounded;
                color: white;
            }
            body {
                font-family: "DM Sans Variable", sans-serif;
            }

            @media (min-width: 768px) {
                .container {
                    display: flex;
                    flex-wrap: wrap;
                }
            }

            @media only screen and (max-width: 480px) {
                * {
                    font-size: 12px;
                }
            }

            .overflow-y-scroll::-webkit-scrollbar {
                width: 3px;
            }

            .overflow-y-scroll::-webkit-scrollbar-thumb {
                background-color: oklch(var(--s));
            }

            .overflow-y-scroll {
                scrollbar-width: 1px;
            }

            @media (max-width: 768px) {
                .container {
                    flex-direction: column;
                }
            }

            @media (min-width: 768px) {
                .container {
                    display: flex;
                    flex-wrap: wrap;
                }
            }
        </style>
    </body>
</html>
